{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "leading_diamond": "\u2554\ue0b6",
          "trailing_diamond": "█\ue0c6 ",
          "foreground": "#ffffff",
          "background": "#000000",
          "type": "os",
          "style": "diamond"
        },
        {
          "properties": {
            "prefix": "<parentBackground>\ue0c6</>",
            "root_icon": "\uf09c"
          },
          "leading_diamond": " ",
          "trailing_diamond": " ",
          "foreground": "#000000",
          "background": "#ffffff",
          "type": "root",
          "style": "diamond"
        },
        {
          "properties": {
            "enable_hyperlink": true,
            "style": "full"
          },
          "foreground": "#000000",
          "powerline_symbol": "\ue0c6",
          "background": "#ffffff",
          "type": "path",
          "style": "powerline",
          "leading_powerline_symbol": "\ue0c7 "
        },
        {
          "properties": {
            "branch_icon": "\ue0a0",
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "template": "{{ .HEAD }} {{ if .Working.Changed }}{{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }}|{{ end }}{{ if Staging.Changed }}<#b0b0b0> \ue0c6 {{ .Staging.String }}</>{{ end }}"
          },
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0a0",
          "background": "#000000",
          "type": "git",
          "style": "powerline",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffffff{{ end }}",
            "{{ if and (gt.Ahead 0) (gt .Behind 0) }}#b0b0b0{{ end }}",
            "{{ if gt .Ahead 0 }}#b0b0b0{{ end }}",
            "{{ if gt .Behind 0 }}#f0f0f0{{ end }}"
          ]
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
            "display_package_manager": true,
            "npm_icon": " <#303030>✦</>",
            "prefix": "\ue0c7",
            "yarn_icon": " <#303030>இ</>"
          },
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "foreground": "#000000",
          "background": "#ffffff",
          "type": "node",
          "style": "diamond"
        },
        {
          "properties": {
            "postfix": "",
            "prefix": " \ue0c7",
            "time_format": "15:04"
          },
          "leading_diamond": " ",
          "trailing_diamond": " ",
          "foreground": "#000000",
          "background": "#f0f0f0",
          "type": "time",
          "style": "diamond",
          "invert_powerline": true
        }
      ]
    },
    {
      "type": "prompt",
      "newline": true,
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "diamond",
          "foreground": "#000000",
          "template": "╚❯ "
        }
      ]
    }
  ],
  "version": 3
}
